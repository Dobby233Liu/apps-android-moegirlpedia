<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <org.wikipedia.views.WikiCardView
            android:id="@+id/wiki_card_for_search"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <include
                android:id="@+id/search_card"
                layout="@layout/view_search_bar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:visibility="visible" />
        </org.wikipedia.views.WikiCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/history_title"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:lineSpacingExtra="10sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/history_list_title"
                android:textColor="?attr/primary_text_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/history_filter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="24dp"
                android:clickable="true"
                android:contentDescription="@string/history_filter_list_hint"
                android:focusable="true"
                android:foreground="?attr/actionBarItemBackground"
                android:longClickable="true"
                android:scaleType="centerInside"
                android:tint="@color/base30"
                app:srcCompat="@drawable/ic_baseline_filter_list_24" />

            <ImageView
                android:id="@+id/history_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:contentDescription="@string/button_clear_all_recent_searches"
                android:focusable="true"
                android:foreground="?attr/actionBarItemBackground"
                android:longClickable="true"
                android:scaleType="centerInside"
                android:tint="@color/base30"
                app:srcCompat="@drawable/ic_delete_white_24dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />
    </LinearLayout>
</merge>
